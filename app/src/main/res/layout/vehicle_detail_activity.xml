<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMainBackground">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/vehicle_detail_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false">

            <android.support.v7.widget.CardView
                android:id="@+id/vehicle_info_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="0dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/colorAccent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/vehicle_info_title_card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@color/colorIconNotActivated">

                            <TextView
                                android:id="@+id/vehicle_info_title_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:text="Vehicle Information"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorAccent"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:id="@+id/vin_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/vehicle_info_title_card_view"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:id="@+id/vin_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIN:"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/vin_edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Add vin..."
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="24sp"
                            android:textColor="@color/colorIconNotActivated"
                            android:inputType="textMultiLine"
                            android:longClickable="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/year_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/vin_layout"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:id="@+id/year_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Year:"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/year_edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Add year..."
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="24sp"
                            android:textColor="@color/colorIconNotActivated"
                            android:inputType="number|textMultiLine"
                            android:longClickable="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/make_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/year_layout"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:id="@+id/make_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Make:"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/make_edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Add make..."
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="24sp"
                            android:textColor="@color/colorIconNotActivated"
                            android:inputType="textMultiLine"
                            android:longClickable="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/model_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/make_layout"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:id="@+id/model_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Model:"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/model_edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Add model..."
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="24sp"
                            android:textColor="@color/colorIconNotActivated"
                            android:inputType="textMultiLine"
                            android:longClickable="false"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/trim_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/model_layout"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:id="@+id/trim_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trim:"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/trim_edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Add trim..."
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="24sp"
                            android:textColor="@color/colorIconNotActivated"
                            android:inputType="textNoSuggestions|textMultiLine"
                            android:longClickable="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/style_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/trim_layout"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:id="@+id/style_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Style:"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/style_edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Add style..."
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="24sp"
                            android:textColor="@color/colorIconNotActivated"
                            android:inputType="textNoSuggestions|textMultiLine"
                            android:longClickable="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/engine_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/style_layout"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:id="@+id/engine_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Engine:"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/engine_edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Add engine..."
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="24sp"
                            android:textColor="@color/colorIconNotActivated"
                            android:inputType="textNoSuggestions|textMultiLine"
                            android:longClickable="false"/>

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/vehicle_pricing_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vehicle_info_card_view"
                app:cardElevation="4dp"
                app:cardCornerRadius="0dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/colorAccent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/vehicle_pricing_title_card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@color/colorIconNotActivated">

                            <TextView
                                android:id="@+id/vehicle_pricing_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:text="Vehicle Pricing"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorAccent"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:id="@+id/price_paid_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/vehicle_pricing_title_card_view"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:id="@+id/price_paid_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"/>

                        <EditText
                            android:id="@+id/price_paid_edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Add price paid..."
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="24sp"
                            android:textColor="@color/colorIconNotActivated"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:longClickable="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/price_sold_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/price_paid_layout"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:id="@+id/price_sold_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"/>

                        <EditText
                            android:id="@+id/price_sold_edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Add price sold..."
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="24sp"
                            android:textColor="@color/colorIconNotActivated"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:longClickable="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/price_expenses_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/price_sold_layout"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:id="@+id/price_expenses_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expenses:"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/vehicle_description_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vehicle_pricing_card_view"
                app:cardElevation="4dp"
                app:cardCornerRadius="0dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/colorAccent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/vehicle_description_title_card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@color/colorIconNotActivated">

                            <TextView
                                android:id="@+id/vehicle_description_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:text="Vehicle Description"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorAccent"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/description_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/vehicle_description_title_card_view"
                        android:layout_marginStart="2dp"
                        android:text="Description:"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/description_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/description_title_text_view"
                        android:layout_marginStart="-1dp"
                        android:hint="Add description..."
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="@color/colorIconNotActivated"
                        android:textSize="18sp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/save_vehicle_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vehicle_description_card_view"
                app:cardUseCompatPadding="true"
                android:visibility="gone"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:id="@+id/save_vehicle_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/large_bar_button_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:text="Save"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/save_return_vehicle_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/save_vehicle_button_container"
                app:cardUseCompatPadding="true"
                android:visibility="gone"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:id="@+id/save_return_vehicle_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/large_bar_button_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:text="Save &amp; Return"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:visibility="gone"
        android:background="@color/colorTransparentBackground">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>